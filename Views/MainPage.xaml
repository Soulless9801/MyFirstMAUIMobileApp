<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMAUIMobileApp.Views.MainPage"
             Title="{Binding Title}">

    <VerticalStackLayout Padding="24,16" 
                         Spacing="24">

        <Grid RowSpacing="20"
              ColumnSpacing="20"
              Padding="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" 
                    Grid.Column="0" 
                    Text="{Binding LayoutsButtonText}"
                    Style="{StaticResource ButtonMain}"
                    Command="{Binding LayoutsButtonClickedCommand}" />

            <Button Grid.Row="0" 
                    Grid.Column="1" 
                    Text="{Binding ImagesButtonText}" 
                    Style="{StaticResource ButtonMain}"
                    Command="{Binding ImagesButtonClickedCommand}"/>

            <Button Grid.Row="1" 
                    Grid.Column="0"
                    Text="{Binding CollectionsButtonText}" 
                    Style="{StaticResource ButtonMain}" 
                    Command="{Binding CollectionsButtonClickedCommand}"/>

            <Button Grid.Row="1" 
                    Grid.Column="1"
                    Text="{Binding ControlsButtonText}" 
                    Style="{StaticResource ButtonMain}" />

            <Button Grid.Row="2" 
                    Grid.ColumnSpan="2"
                    Text="{Binding SQLiteButtonText}" 
                    Style="{StaticResource ButtonMain}" />

        </Grid>
    </VerticalStackLayout>
</ContentPage>