<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMAUIMobileApp.Views.MainPage"
             Title="{Binding Title}">

    <VerticalStackLayout Padding="24,16" 
                         Spacing="24">

        <Grid RowSpacing="20"
              ColumnSpacing="20"
              Padding="0">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button Text="{Binding Layouts}"
                    Command="{Binding OnLayoutsClicked}"
                    Grid.Row="0" 
                    Grid.Column="0" 
                    Style="{StaticResource ButtonPrimary}"/>

            <Button Text="{Binding Images}" 
                    Grid.Row="0" 
                    Grid.Column="1" 
                    Style="{StaticResource ButtonPrimary}"/>

            <Button Text="{Binding Collections}" 
                    Grid.Row="1" 
                    Grid.Column="0"
                    Style="{StaticResource ButtonPrimary}"/>

            <Button Text="{Binding Controls}" 
                    Grid.Row="1" 
                    Grid.Column="1"
                    Style="{StaticResource ButtonPrimary}"/>

            <Button Text="{Binding SQLite}" 
                    Grid.Row="2" 
                    Grid.ColumnSpan="2"
                    Style="{StaticResource ButtonPrimary}"/>
            
        </Grid>

    </VerticalStackLayout>

</ContentPage>