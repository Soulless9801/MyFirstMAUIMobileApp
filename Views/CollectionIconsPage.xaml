<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:MyFirstMAUIMobileApp.Models.Entities"
             x:Class="MyFirstMAUIMobileApp.Views.CollectionIconsPage"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10" />
        </Style>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add"
                     x:Name="addButton"
                     Command="{Binding AddMovieCommand}" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto, Auto, *" 
          ColumnDefinitions="*">

        <FlexLayout Grid.Row="0" 
                    Direction="Column" 
                    AlignItems="Center">

            <Label Text="Movies"
                   FontAttributes="Bold, Italic"
                   FontSize="50"
                   TextColor="CadetBlue" />
        </FlexLayout>

        <BoxView Grid.Row="1"
                 HeightRequest="2"
                 BackgroundColor="Black" />

        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">

            <CollectionView x:Name="ItemsCollectionView"
                            ItemsSource="{Binding MovieCollection, Mode=TwoWay}"
                            SelectionMode="None"
                            ItemsLayout="VerticalList">

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:MarvelMovies">
                        <Grid RowDefinitions="Auto, 2"
                              ColumnDefinitions="*, Auto">

                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   Text="{Binding NameofMovie}"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Start"
                                   TextColor="Black"
                                   FontSize="Medium"
                                   Margin="10,0,0,0" />

                            <HorizontalStackLayout Grid.Row="0"
                                                   Grid.Column="1"
                                                   Spacing="10">

                                <ImageButton Source="{Binding EditButton}"
                                             Command="{Binding Path=BindingContext.EditMovieCommand, Source={x:Reference ItemsCollectionView}}"
                                             CommandParameter="{Binding .}" />

                                <ImageButton Source="{Binding DeleteButton}"
                                             Command="{Binding Path=BindingContext.DeleteMovieCommand, Source={x:Reference ItemsCollectionView}}"
                                             CommandParameter="{Binding .}" />

                            </HorizontalStackLayout>

                            <BoxView Grid.Row="1"
                                     Grid.ColumnSpan="2"
                                     HeightRequest="2"
                                     BackgroundColor="Gray"/>

                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>