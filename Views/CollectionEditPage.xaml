<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMAUIMobileApp.Views.CollectionEditPage"
             Title="CollectionEditPage">
    
    <VerticalStackLayout Padding="20"
                         Spacing="20"
                         VerticalOptions="Start">

        <Label Text="Movie Title"
               FontAttributes="Bold"
               FontSize="Large"
               TextColor="Black" />

        <Entry x:Name="MovieTitle"
               Text="{Binding MovieName, Mode=TwoWay}"
               FontSize="Medium"
               TextColor="Blue"/>

        <Button x:Name="editButton"
                Text="Update"
                Command="{Binding UpdateButtonClickedCommand}" 
                BackgroundColor="Green"
                TextColor="White"
                FontAttributes="Bold"/>

    </VerticalStackLayout>
</ContentPage>