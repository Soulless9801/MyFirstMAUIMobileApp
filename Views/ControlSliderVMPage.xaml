<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMAUIMobileApp.Views.ControlSliderVMPage"
             Title="{Binding Title}">
    
    <VerticalStackLayout Padding="20"
                         Spacing="20" >

        <BoxView x:Name="MyBox" 
                 Color="Blue" 
                 Opacity="{Binding SliderValue}"
                 HeightRequest="25"
                 HorizontalOptions="Fill" />

        <Slider x:Name="MySlider"
                Value="{Binding SliderValue, Mode=TwoWay}"
                Minimum="0" 
                Maximum="1"
                ThumbColor="Blue"
                MaximumTrackColor="BlueViolet"
                MinimumTrackColor="DarkOrange"
                HorizontalOptions="Fill"/>

        <Label x:Name="ValueLabel"
               FontAttributes="Bold"
               Text="{Binding SliderValue, StringFormat='Slider Value: {0:F2}'}"
               FontSize="Large"
               HorizontalOptions="Center" />

        <Label x:Name="InfoLabel"
               Text="Moving Slider will Change Opacity"
               FontSize="Medium"
               TextColor="Blue"
               Opacity="{Binding SliderValue}"
               HorizontalOptions="Center" />

        <Button Text="Set Slider to 50%"
                Command="{Binding SetToHalfCommand}"
                HorizontalOptions="Center" />
        
    </VerticalStackLayout>
</ContentPage>