<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMAUIMobileApp.Views.LayoutsPage"
             Title="{Binding Title}">

    <VerticalStackLayout Padding="24,16" 
                         Spacing="24">

        <Grid RowSpacing="20"
              ColumnSpacing="20"
              Padding="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" 
                    Grid.Column="0" 
                    Text="{Binding StackLayoutButtonText}"
                    Style="{StaticResource ButtonLayouts}"
                    Command="{Binding StackLayoutButtonClickedCommand}" />

            <Button Grid.Row="0" 
                    Grid.Column="1"
                    Text="{Binding VerticalStackLayoutButtonText}"
                    Style="{StaticResource ButtonLayouts}"
                    Command="{Binding VerticalStackLayoutButtonClickedCommand}" />

            <Button Grid.Row="1" 
                    Grid.Column="0"
                    Text="{Binding HorizontalStackLayoutButtonText}"
                    Style="{StaticResource ButtonLayouts}"
                    Command="{Binding HorizontalStackLayoutButtonClickedCommand}" />


            <Button Grid.Row="1" 
                    Grid.Column="1"
                    Text="{Binding AbsoluteLayoutButtonText}"
                    Style="{StaticResource ButtonLayouts}"
                    Command="{Binding AbsoluteLayoutButtonClickedCommand}"/>

            <Button Grid.Row="2" 
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Text="{Binding FlexLayoutButtonText}"
                    Style="{StaticResource ButtonLayouts}"
                    Command="{Binding FlexLayoutButtonClickedCommand}" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>